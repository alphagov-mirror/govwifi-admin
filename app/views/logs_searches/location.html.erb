<% content_for :page_title, "Search logs by location" %>

<%= render "layouts/form_errors", resource: @search %>

<div class='govuk-grid-row'>
  <div class='govuk-grid-column-two-thirds'>
    <%= link_to "Back to search options", new_logs_search_path, class: "govuk-back-link" %>
  </div>

  <h1 class='govuk-heading-l govuk-grid-column-full'>Search logs by location </h1>

  <div class='govuk-grid-column-two-thirds'>
    <%= form_for @search do |f| %>
      <div class='govuk-form-group'>
        <%= f.label :search_term, "Select one of your organisation's locations", class: "govuk-label" %>
        <%= collection_select :logs_search, :search_term, @locations, :id, :full_address, {}, class: "govuk-select" %>
      </div>
      <%= f.hidden_field :filter %>
      <%= f.submit "Show logs", class: "govuk-button" %>
    <% end %>
  </div>
</div>
